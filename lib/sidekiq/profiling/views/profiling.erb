<header class="row">
  <div class="span5">
    <h3>Profiling</h3>
  </div>
  <div class="span4">
    <% if @messages.size > 0 %>
      <%= erb :_paging, :locals => { :url => "#{root_path}profiling#@name" } %>
    <% end %>
  </div>
</header>

<style>
th span {
  padding: 0 .5em;
  writing-mode: tb-rl;
  filter: flipv fliph;
  -webkit-transform:rotate(45deg);
  white-space:nowrap;
  display:block;
}
</style>

<table class="table table-striped table-bordered table-white" style="width: 100%; margin: 0; table-layout:fixed;">
  <thead>
    <% @types.each do |type| %>
      <th><span><%= type %></span></th>
    <% end %>
  </thead>
  <% @messages.each do |msg| %>
    <tr>
      <% @types.each do |type| %>
        <td>
          <%= msg[type] %>
        </td>
      <% end %>
    </tr>
  <% end %>
</table>
